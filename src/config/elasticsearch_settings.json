{
  "settings": {
    "analysis": {
      "analyzer": {
        "english_exact": {
          "tokenizer": "standard",
          "filter": [
            "lowercase", 
            "porter_stem"
          ]
        }
      }
    },
    "index.max_result_window": 100000,
    "index.blocks.read_only_allow_delete": null
  },
  "mappings": {
    "properties": {
      "sent": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "exact": {
            "type": "text",
            "analyzer": "english_exact"
          }
        }
      }, 
      "title": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "exact": {
            "type": "text",
            "analyzer": "english_exact"
          }
        }
      }
    }
  }
}
